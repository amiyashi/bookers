<h1>Books</h1>

<div class="book-wrap">

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <div class="book-wrap">
        <tr>
          <td class="book-title"><%= book.title %></td>
          <td class="book-body"><%= book.body %></td>
          <td class="menu"><%= link_to 'Show', book_path(book.id) %></td>
          <td class="menu"><%= link_to 'Edit', edit_book_path(book.id)%></td>
          <td class="menu"><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      </div>
    <% end %>
  </tbody>
</table>
</div>

<h2>New books</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %><li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: books_path, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>